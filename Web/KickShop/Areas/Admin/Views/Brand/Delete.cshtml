@model BrandDetailsViewModel

<h2>Delete Brand</h2>

<div>
    <h4>Are you sure you want to delete this brand?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Country</dt>
            <dd class="col-sm-10">@Model.Country</dd>

            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@Model.Address</dd>

            <dt class="col-sm-2">Phone Number</dt>
            <dd class="col-sm-10">@Model.PhoneNumber</dd>
        </dl>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="BrandId" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-controller="Manage" asp-action="ManageBrands">Cancel</a>
    </form>
</div>
