@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<div class="jumbotron text-center bg-danger text-white" style="padding: 3rem 1rem;">
    <h1>Welcome to Our Kickboxing Gear Shop!</h1>
    <p>Find the best gear for your training and competitions!</p>
    <a asp-controller="Product" asp-action="All" asp class="btn btn-light btn-lg">View All Products</a>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100 product-card">
                    <img src="@product.MainImageUrl" class="card-img-top product-image" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text text-primary"><strong>@(product.Price) лв.</strong></p>
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" asp class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<footer class="text-center mt-5 bg-dark text-white py-4">
    <p>&copy; @DateTime.Now.Year KickShop. All rights reserved.</p>
    <div class="d-flex justify-content-center">
        <a href="#" class="text-white me-3"><i class="fab fa-facebook-f"></i></a>
        <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
        <a href="#" class="text-white"><i class="fab fa-twitter"></i></a>
    </div>
</footer>

<style>
    .jumbotron {
        padding: 4rem 2rem;
    }

    .product-image {
        height: 350px;
        object-fit: cover;
    }

    .product-card:hover {
        transform: scale(1.02);
        transition: transform 0.3s ease;
    }
</style>
