@model CategoryViewModel

<div class="delete-confirmation text-center">
    <h2>Are you sure you want to delete @Model.Name?</h2>
    @if (Model.ImageUrl != null)
    {
        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded mb-3" style="max-width: 300px;" />
    }
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
    </form>
</div>
