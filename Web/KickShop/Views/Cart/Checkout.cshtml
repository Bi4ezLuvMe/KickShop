@model CheckoutSummaryViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <h1 class="text-center">Checkout</h1>
    <hr />

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">Order Summary</h4>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span class="fw-bold">Products Ordered:</span>
                        <span>@Model.ProductCount</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Total Price:</span>
                        <span class="text-success fs-5">@Model.TotalPrice.ToString("C")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <h4>Billing Information</h4>
            <form asp-action="PlaceOrder" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="BillingAddress.FullName" class="form-label">Full Name</label>
                        <input asp-for="BillingAddress.FullName" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="BillingAddress.Email" class="form-label">Email</label>
                        <input asp-for="BillingAddress.Email" type="email" class="form-control" required />
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="BillingAddress.Address" class="form-label">Address</label>
                    <input asp-for="BillingAddress.Address" class="form-control" required />
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="BillingAddress.City" class="form-label">City</label>
                        <input asp-for="BillingAddress.City" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="BillingAddress.ZipCode" class="form-label">Zip Code</label>
                        <input asp-for="BillingAddress.ZipCode" class="form-control" required />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
                </div>
            </form>
        </div>
    </div>
</div>
