@model KickShop.ViewModels.BrandDetailsViewModel

@{
    ViewData["Title"] = "Brand Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h3 class="mb-0">@Model.Name</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name Logo" class="img-fluid rounded" style="width: 350px;">
                        }
                        else
                        {
                            <img src="~/images/default-brand.png" alt="Default Logo" class="img-fluid rounded" style="max-width: 150px;">
                        }
                    </div>

                    <div class="d-flex justify-content-between my-2 text-center">
                        <span>@Model.Description</span>
                    </div>

                    <div class="d-flex justify-content-between my-2">
                        <strong>Country:</strong>
                        <span>@Model.Country</span>
                    </div>
                    <div class="d-flex justify-content-between my-2">
                        <strong>Address:</strong>
                        <span>@Model.Address</span>
                    </div>
                    <div class="d-flex justify-content-between my-2">
                        <strong>Phone Number:</strong>
                        <span>@Model.PhoneNumber</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
