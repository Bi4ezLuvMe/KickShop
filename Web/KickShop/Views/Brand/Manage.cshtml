@model IPagedList<Brand>
@{
    string? query = ViewBag.Query?.ToString();
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
}
<h2 class="text-center">Manage Brands</h2>

<div class="mb-3 d-flex align-items-center justify-content-between">

    <form method="get" asp-controller="Brand" asp-action="Manage" class="d-flex w-75">
        <div class="d-flex w-50">
            <input type="text" name="query" class="form-control search-bar me-2" placeholder="Search for products..." value="@query" />
            <button type="submit" class="btn btn-primary search-button">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    <a asp-action="Add" class="btn btn-success ms-auto">Add New Brand</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Country</th>
            <th>Phone Number</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td><img class="img" src="@brand.ImageUrl" alt="@brand.Name" /></td>
                <td>@brand.Name</td>
                <td>@brand.Country</td>
                 <td>@brand.PhoneNumber</td>
                <td>@brand.Address</td>
                <td>
                    <div class="mb-1">
                        <a asp-controller="Brand" asp-action="Details" asp-route-id="@brand.BrandId" class="btn btn-info btn-sm">Details</a>
                    </div>
                    <div class="mb-1">
                        <a asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.BrandId" class="btn btn-primary btn-sm">Edit</a>
                    </div>

                    <form asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.BrandId" method="get" onsubmit="return confirm('Are you sure you want to delete this product?');" class="mb-2">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="pagination-container">
    @if (Model.PageCount > 1)
    {
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li><a href="@Url.Action("Manage", new { query = query, page = 1 })" class="page-link">First</a></li>
                <li><a href="@Url.Action("Manage", new { query = query, page = Model.PageNumber - 1 })" class="page-link">Previous</a></li>
            }
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="@(i == Model.PageNumber ? "active" : "")">
                    <a href="@Url.Action("Manage", new { query = query, page = i })" class="page-link">@i</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li><a href="@Url.Action("Manage", new { query = query, page = Model.PageNumber + 1 })" class="page-link">Next</a></li>
                <li><a href="@Url.Action("Manage", new { query = query, page = Model.PageCount })" class="page-link">Last</a></li>
            }
        </ul>
    }
</div>
<style>
    .img {
        height: 100px;
        width: auto;
    }

    .btn-sm {
        width: 100px;
        text-align: center;
    }


    .pagination-container {
        margin-top: 30px;
        text-align: center;
    }

    .pagination {
        list-style-type: none;
        padding: 0;
        display: inline-flex;
        justify-content: center;
    }

        .pagination li {
            margin: 0 8px;
        }

    .page-link {
        text-decoration: none;
        padding: 10px 20px;
        background-color: #007bff;
        color: #fff;
        border-radius: 5px;
        border: 1px solid #007bff;
        font-weight: bold;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .pagination li.active .page-link {
        background-color: #28a745;
        color: white;
        border-color: #28a745;
    }

    .page-link:hover {
        background-color: #0056b3;
        color: white;
    }

    .page-link:disabled {
        background-color: #e0e0e0;
        color: #a0a0a0;
        border-color: #e0e0e0;
        cursor: not-allowed;
    }
</style>