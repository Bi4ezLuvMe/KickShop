@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentSortOrder = ViewBag.SortOrder?.ToString();
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Products</h2>

    <div class="mb-3">
        <form method="get" asp-controller="Product" asp-action="@(Model.FirstOrDefault().Action)">
            <span>Sort by Price:</span>
            <button type="submit" name="sortOrder" value="asc" class="btn btn-outline-primary @(currentSortOrder == "asc" ? "active" : "")">Low to High</button>
            <button type="submit" name="sortOrder" value="desc" class="btn btn-outline-primary @(currentSortOrder == "desc" ? "active" : "")">High to Low</button>
        </form>
    </div>

    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 400px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text text-primary"><strong>$@product.Price</strong></p>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.ProductId" asp class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No products found.</p>
            </div>
        }
    </div>
</div>
